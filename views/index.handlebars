<div class='container'>
  <img class='burger-image' src='assets/images/burger.jpg'>
  <h1>Eat-Da-Burger!</h1>

<div class='content'>
  
  <div class='list1'>
    <h2> Burgers you want to eat</h2>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </div>
  <div class='list2'>
    <h2> Burgers you have devoured</h2>
    {{#each burgers}}
      {{#if devoured}}
        {{> burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </div>
</div>




{{!-- Begin form to add burgers --}}
<div class='form'>
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button type="submit" class='submit'>Add burger</button>
  </form>
</div>

</div>
